<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http use-expressions="true">
		<intercept-url pattern="/AreaAdmin" access="hasAuthority('ROLE_ADMIN')" />
		<intercept-url pattern="/AreaCliente" access="hasAuthority('ROLE_CLIENTE')" />
		<intercept-url pattern="/AreaProfesional" access="hasAuthority('ROLE_PROF')" />
		<intercept-url pattern="/**" access="isAuthenticated()"/>
		<form-login />
	</http>

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="brian" password="kupita" authorities="ROLE_ADMIN"/>
				<user name="ana" password="ana" authorities="ROLE_USER"/>
				<user name="admin" password="123" authorities="ROLE_ADMIN"/>
				<user name="cliente" password="123" authorities="ROLE_CLIENTE"/>
				<user name="profesional" password="123" authorities="ROLE_PROF"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>
